
@{
    ViewData["Title"] = "Add";
}
@model Product

<h1>Ürün Ekleme</h1>



<form asp-controller="Products" asp-action="Add" method="post">


    <div class="mb-3">
        <label for="Name" class="form-label">Ürün İsmi</label>
        <input class="form-control" asp-for="Name">
       
    </div>
    <div class="mb-3">
        <label for="Price" class="form-label">Ürün Fiyat</label>
        <input class="form-control" asp-for="Price">

    </div>
    <div class="mb-3">
        <label for="Stock" class="form-label">Ürün İsmi</label>
        <input class="form-control" asp-for="Stock">

    </div>
    <div class="mb-3">
        <label for="Color" class="form-label">Ürün Rengi</label>
        <input class="form-control" asp-for="Color">

    </div>


    <button  class="btn btn-primary" type="submit">Ürün Kaydet</button>




</form>



